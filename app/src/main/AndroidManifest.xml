<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yahoo.pmathew.imageviewer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.ImageViewerHomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yahoo.pmathew.imageviewer.activities.ImageDisplayActivity"
            android:label="@string/title_activity_image_display"
            android:parentActivityName="com.yahoo.pmathew.imageviewer.activities.ImageViewerHomeActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yahoo.pmathew.imageviewer.activities.ImageViewerHomeActivity" />
        </activity>
    </application>

</manifest>

